<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_tag("/posts/#{@edit.id}/update") do %>
    <div class="form">
      <div class="form-body">
          <% if @edit.errors.any? %>
           <div id="error_explanation" class="alert alert-danger">
            <ul>
           <% @edit.errors.full_messages.each do |message| %>
            <li><%= message %></li>
           <% end %>
            </ul>
            </div>
        <% end %>
        <textarea name="title"><%= @edit.title %></textarea>
        <input type="submit" value="保存">
      </div>
    </div>
    <% end %>
  </div>
</div>
<div class="main users-new">
  <div class="container">
    <div class="form-heading">新規ユーザー登録</div>
    <div class="form users-form">
      <div class="form-body">
        
        <% @newuser.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        
        <%= form_tag("/users/create", {multipart: true}) do %>
        <p>ユーザー名</p>
        <!-- <input>タグを用いて1行の入力フォームを作成してください -->
        <input name="name" value="<%= @newuser.name %>">
        
        <p>メールアドレス</p>
        <!-- <input>タグを用いて1行の入力フォームを作成してください -->
        <input name="email" value="<% @newuser.email %>">
        
        <input type="submit" value="新規登録">
        <% end %>
      </div>
    </div>
  </div>
</div>
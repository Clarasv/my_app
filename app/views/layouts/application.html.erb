<!DOCTYPE html>
<html>
  <head>
    <title>MyApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    
  </head>

  <header>
    <div class="header-logo">
      <%= link_to("Tweetapp", "/") %>
    </div>
    <ul class="header-menus">
         <% if @current_user %>
          <li>
            <%= link_to("ログインユーザー："+ @current_user.name, "/users/#{@current_user.id}") %>
          </li>
      <li>
       <%= link_to("投稿一覧", posts_index_path) %>
      </li>
      <li>
       <%= link_to("新規投稿", posts_new_path) %>
      </li>
      <li>
        <%= link_to("ユーザー一覧", users_index_path) %>
      </li>
      <li>
        <%= link_to("ログアウト", logout_path, data: {turbo_method: :post}) %>
      </li>
       <% else %>
            <li>
       <%= link_to("TweetAppとは", about_path) %>
      </li>
      <li>
        <%= link_to("ログイン", login_path) %>
      </li>
      <li>
        <%= link_to("新規登録", signup_path) %>
      </li>
    </ul>
    <% end %>
  </header>
  
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

  <body>
    <%= yield %>
  </body>
</html>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
